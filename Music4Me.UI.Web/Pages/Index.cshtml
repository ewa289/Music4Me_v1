@page
@model IndexModel
@{
    ViewData["Title"] = "Music4Me";
}

<div class="text-center">
    <h1 class="display-4">Välkommen till Music4Me</h1>
    <p>
        Music4Me är en rekommendationstjänst för dig som vill upptäcka ny musik.
        <br />Börja med att välja en kategori från listan nedan.
    </p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage)) {
    <div class="text-danger">@Model.ErrorMessage</div>
} else {
    <div class="panel panel-default">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kategori</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories) {
                    <tr>
                        <td><a asp-page="Artists" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name">@category.Name</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}